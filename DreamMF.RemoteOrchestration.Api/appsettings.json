{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source={AppDir}/remote_orchestration.sqlite"
  },
  "Analytics": {
    "EnableCleanupService": false,
    "CleanupIntervalHours": 24,
    "RetentionDays": 30
  },
  "StorageType": "Azure", 
  "AzureBlobStorage": {
    "ConnectionString": "YourAzureBlobStorageConnectionString"
  },
  "S3Storage": {
    "AccessKeyId": "YourAccessKeyId",
    "SecretAccessKey": "YourSecretAccessKey",
    "Region": "YourRegion"
  }
}
